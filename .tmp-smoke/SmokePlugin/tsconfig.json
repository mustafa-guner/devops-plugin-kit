{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "core/*": [
        "src/core/*"
      ],
      "app/*": [
        "src/app/*"
      ],
      "tabs/*": [
        "src/app/tabs/*"
      ]
    }
  },
  "include": [
    "src",
    "vitest.config.ts"
  ]
}