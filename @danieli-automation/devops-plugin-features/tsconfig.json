{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "features/*": ["src/features/*"],
      "core/*": ["src/core/*"],
      "app/*": ["src/app/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
